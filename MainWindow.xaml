<Window x:Class="PhotoOrganizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Organizer" Height="600" Width="800"
        MinHeight="400" MinWidth="600">
    <Window.Resources>
        <Style TargetType="ProgressBar">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF45A5F7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border x:Name="PART_Track" 
                                    CornerRadius="15" 
                                    BorderThickness="1" 
                                    BorderBrush="#FF999999"
                                    Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" 
                                    CornerRadius="5" 
                                     BorderThickness="1" 
                                    BorderBrush="#FF999999"
                                    Background="{TemplateBinding Foreground}" 
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Source/Destination -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- ListView -->
            <RowDefinition Height="Auto"/>
            <!-- Progress -->
            <RowDefinition Height="Auto"/>
            <!-- StatusBar -->
        </Grid.RowDefinitions>

        <!-- Source/Destination Section -->
        <StackPanel Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtSource" Margin="5" IsReadOnly="True"/>
                <Button x:Name="btnBrowseSource" Grid.Column="1" 
                        Content="Browse Source..." Margin="5" Padding="10,3"
                        Click="BrowseSource_Click" Background="#FFFFF008"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtDestination" Margin="5" IsReadOnly="True"/>
                <Button x:Name="btnBrowseDestination" Grid.Column="1" 
                        Content="Browse Destination..." Margin="5" Padding="10,3"
                        Click="BrowseDestination_Click" Background="#FFF0ED00"/>
            </Grid>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5">
            <Button x:Name="btnImport" Content="Import Photos" Margin="5" 
                    Width="120" Height="30" Click="ImportButton_Click" FontSize="14" Foreground="Black" Background="#FF69D6CC" BorderBrush="#FFE9E9E9"/>
            <Button x:Name="btnOrganize" Content="Organize Photos" Margin="5" 
                    Width="120" Height="30" Click="Organize_Click" Background="#FF9EF757"/>
        </StackPanel>

        <!-- Photo List -->
        <ListView Grid.Row="2" Margin="10,5" ItemsSource="{Binding Photos}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File" Width="200" 
                                   DisplayMemberBinding="{Binding FileName}"/>
                    <GridViewColumn Header="Path" Width="400"
                                   DisplayMemberBinding="{Binding FilePath}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="3" x:Name="progressBar" Height="20" 
                     Margin="10,5,10,0" Minimum="0" Maximum="100" 
                     Value="0" Visibility="Collapsed"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#FFE0E0E0">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Ready" Margin="5,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>